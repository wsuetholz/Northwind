@model Northwind.Program

@{
    ViewData["Title"] = "balloons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container border border-dark">
    <h1 class="animated tada" id="happyBirthday">Happy Birthday</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <!-- Name -->
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" />
            </div>
            <!-- Birthday -->
            <div class="form-group">
                <label for="birthday">Birthday</label>
                <input type="text" class="form-control" id="birthday" />
            </div>
            <!-- Cards -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Select Your Balloons!</h5>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input select-color" id="blue" />
                        <label class="form-check-label">Blue Balloon</label>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input select-color" id="red" />
                        <label class="form-check-label">Red Balloon</label>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input select-color" id="yellow" />
                        <label class="form-check-label">Yellow Balloon</label>
                    </div>
                    <br />
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input select-all" id="selectAll" />
                        <label class="form-check-label" id="selectAllLabel">Select All</label>
                    </div>
                </div>
                <button type="button" class="btn btn-outline-primary" id="balloonSubmit">Submit Balloon Choice</button>
            </div>
        </div>
        <div class="col-md-6">
            <!-- Birthday Balloons -->
            <img src="~/media/blue.png" class="balloons" style="visibility:hidden" id="blueImg" />
            <img src="~/media/red.png" class="balloons" style="visibility:hidden" id="redImg" />
            <img src="~/media/yellow.png" class="balloons" style="visibility:hidden" id="yellowImg" />
        </div>
    </div>
</div>

<div aria-live="polite" aria-atomic="true" class="d-flex justify-content-center aligh-items-center" style="min-height: 200px">
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <img src="..." class="rounded mr-2" alt="..." />
            <strong class="mr-auto">Balloons Warning</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            <span>No balloons are selected.</span>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/balloons.js"></script>
}
