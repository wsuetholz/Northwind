@using  Microsoft.AspNetCore.Identity
@model IEnumerable<Northwind.Model.Entities.AppUser>
@{
    ViewData["Title"] = "User Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-primary m-1 p-1"><h4>Roles</h4></div>

<div class="text-danger" asp-validataion-summary="All"></div>
<table class="table table-sm table-bordered">
    <tr>
        <th>Account ID</th>
        <th>User Name</th>
        <th>Email Address</th>
        <th></th>
    </tr>
    @if (!Model.Any())
    {
        <tr><td colspan="3" class="text-center">No Accounts</td></tr>
    }
    else
    {
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <button class="btn btn-sm btn-outline-primary" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-outline-primary" asp-action="Create">Create</a>


